{
  "name": "@manishiitg/peerjs-mesh",
  "version": "0.0.0",
  "description": "Simple P2P Mesh using peerjs",
  "main": "lib/mesh.js",
  "scripts": {
    "build": "babel lib -d dist --delete-dir-on-start --copy-files --no-copy-ignored --ignore **/*.test.js",
    "test": "jest --ci --runInBand --coverage --reporters=default --reporters=jest-junit --env=jest-environment-jsdom-sixteen",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint lib",
    "pretest": "npm-run-all --parallel pretest:*",
    "pretest:lint": "npm run lint",
    "documentation": "documentation build lib/** --config documentation.yml --infer-private --access public -f html -o doc",
    "pretest:inspect": "jscpd -c .jscpd.json -i \"**/*.test.js,**/*.styles.js,**/*.css\" lib"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/manishiitg/peerjs-mesh",
  "dependencies": {
    "peerjs": "^1.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "documentation": "^13.2.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-junit": "^12.0.0",
    "jscpd": "^3.3.25",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/example",
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90
      }
    }
  }
}
